<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_layout"
    android:background="#FCE8E8"
    android:orientation="vertical">

    <!-- This XML file will be used for item_list.xml -->


    <!--Move the textview attributes into a style as most of them are the same!-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/calories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_rectangle"
            android:backgroundTint="@android:color/holo_green_light"
            android:layout_weight="1"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="2500"/>
        <TextView
            android:id="@+id/fats"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/textview_rectangle"
            android:backgroundTint="@android:color/holo_red_light"
            android:layout_weight="1"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="83"/>
        <TextView
            android:id="@+id/carbs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/textview_rectangle"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:layout_weight="1"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="281"/>
        <TextView
            android:id="@+id/protein"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/textview_rectangle"
            android:backgroundTint="@android:color/holo_purple"
            android:layout_weight="1"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="156"/>
    </LinearLayout>

    <TextView
        android:id="@+id/outputHolder"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/testingDB"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ListView
        android:id="@+id/list"
        android:choiceMode="multipleChoiceModal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>